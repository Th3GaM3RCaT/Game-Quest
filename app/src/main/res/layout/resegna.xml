<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/img_user_resegna"
        android:layout_width="54dp"
        android:layout_height="54dp"
        app:layout_constraintBottom_toTopOf="@+id/txt_resegna"
        app:layout_constraintEnd_toStartOf="@+id/valoracion"
        app:layout_constraintHorizontal_bias="0.805"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/avatars" />

    <RatingBar
        android:id="@+id/valoracion"
        android:layout_width="237dp"
        android:layout_height="54dp"
        app:layout_constraintBottom_toTopOf="@+id/txt_resegna"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.678"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txt_resegna"
        android:layout_width="306dp"
        android:layout_height="159dp"
        android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit. Nullam at est imperdiet, vestibulum elit non, tempor odio. Cras et ultricies dui. Proin risus nisl, sagittis in sodales vitae, egestas ut est. Vivamus sapien nulla, euismod sed venenatis sed, tristique sit amet ligula. Orci varius natoque penatibus et magnis dis parturient montes, nascetur ridiculus mus. "
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.466"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.148" />

</androidx.constraintlayout.widget.ConstraintLayout>